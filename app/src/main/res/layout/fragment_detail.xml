<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.myapp.popularmovies.DetailActivityFragment">

    <ImageView
        android:id="@+id/detail_iv_poster"
        android:layout_height="@dimen/detail_poster_height"
        android:layout_width="@dimen/detail_poster_width"
        android:layout_marginRight="@dimen/detail_margin"
        android:layout_marginBottom="@dimen/detail_margin"
        android:scaleType="centerCrop"
        android:contentDescription="Movie poster"
        />

    <TextView
        android:id="@+id/detail_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/detail_margin"
        android:layout_toRightOf="@id/detail_iv_poster"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_title_material"
        android:gravity="left"/>

    <TextView
        android:id="@+id/detail_tv_relDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/detail_margin"
        android:layout_toRightOf="@id/detail_iv_poster"
        android:layout_below="@id/detail_tv_title"
        android:gravity="left" />

    <TextView
        android:id="@+id/detail_tv_ratings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/detail_margin"
        android:layout_toRightOf="@id/detail_iv_poster"
        android:layout_below="@id/detail_tv_relDate"
        android:gravity="left"/>

    <TextView
        android:id="@+id/detail_tv_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_iv_poster"
        android:gravity="left"
        android:scrollbars="vertical"/>
</RelativeLayout>
